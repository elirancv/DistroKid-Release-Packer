[run]
source = scripts
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */venv/*
    */env/*
    # CLI entry points and utility scripts (hard to test, low priority)
    */pack.py
    */check_tags.py
    */batch_processor.py

[report]
# Minimum coverage threshold (fail if below this)
# Note: CLI entry points (pack.py, check_tags.py) and batch_processor.py are excluded
# as they are primarily integration points and hard to unit test effectively
fail_under = 60
precision = 2
show_missing = True
skip_covered = False

exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover
    # Don't complain about missing debug-only code
    def __repr__
    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError
    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:
    # Don't complain about abstract methods
    @abstractmethod

[html]
directory = htmlcov

